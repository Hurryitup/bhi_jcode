include ../node_modules/jade-bootstrap/components/panels.jade
include ../node_modules/jade-bootstrap/components/tables.jade
include ../node_modules/jade-bootstrap/components/dropdowns.jade

mixin waypoint(point)
        div.container-fluid(class=point)
                div.col-xs-12.col-sm-3.col-md-3.col-lg-3.island
                        +dropdown("From",[])
                div.col-xs-12.col-sm-3.col-md-3.col-lg-3.island
                        +dropdown("To",[])
                div.col-xs-12.col-sm-3.col-md-3.col-lg-3.date
                                input(type="text", class="datepicker")
                div.col-xs-12.col-sm-3.col-md-3.col-lg.3.times
                        +dropdown("Times", [])


html(lang="en")
        head
                title Boston Harbor Islands | Ferry Scheduling
                meta(charset='utf-8')
                meta(http-equiv="X-UA-Compatible" content="IE=edge")
                script(src="https://ajax.microsoft.com/ajax/jQuery/jquery-1.11.1.min.js")
                script(src="//code.jquery.com/ui/1.11.4/jquery-ui.js")
                link(href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" rel="stylesheet")
                meta(name="viewport" content="width=device-width, initial-scale=1")
                link(href="styling/map_styling.css", rel="stylesheet", type="text/css")
                //- link(href="http://fonts.googleapis.com/css?family=Lobster+Two" rel="stylesheet" type="text/css")
                link(href="http://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" type="text/css")
                link(href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", rel="stylesheet")
                script(src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
                script(src='https://maps.googleapis.com/maps/api/js')
                script(src='scripts/map_interaction.js')
                script(src='scripts/datepicker.js')
                script(src='scripts/panel.js')
        body
                div#map
                +panel-info("<table><tr><td><img src='images/boat.png' alt='Boat Glif'></td><td id='pyt'>Plan Your Trip</td></tr></table>")
                        span#subtitle (Use the + button for a multi-island trip)
                        table.table
                                tbody
                                        tr
                                                +waypoint("point")
                                        tr
                                                div.container-fluid#add_point 
                                                        button.btn.btn-success
                                                                span.glyphicon.glyphicon-plus(aria-hidden=true)